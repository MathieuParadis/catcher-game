{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "standard-with-typescript",
      "plugin:react/recommended",
      "eslint:recommended",
      "plugin:react-hooks/recommended",
      "plugin:prettier/recommended",
      "eslint-config-prettier"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "prettier"
    ],
    "rules": {
      "indent": ["error", 2],
      "prettier/prettier": "error"
    },
    "overrides": [
      {
        "files": ["*.ts", "*.tsx"],
        "rules": {
          "no-undef": "off"
        }
      }
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  }
  